{% extends theme.liquid %}
{% block contents %}
    <header class="header">
        <div class="container">
            <h1>{{ page.title }}</h1>
            <p>{{ page.meta_description }}</p>
        </div>
    </header>
    
    <main class="container">
        <ul class="product--tiles row">
            {% for item in categories.featured.items -%}
                <li class="product--tile threecol">
                    <a href="/item/{{ item.id }}">
                        <div class="product__media" style="background-image: url({{ item.image_url_small }})">
                            <!--{{ item.image_url_large | img_tag }}-->
                        </div>
                        <div class="product__info">
                            <h3>{{ item.title }}</h3>
                            <p>{{ item.display_price }}</p>
                            <small>Added {{ item.created_time | date: 'MMMM dd, yyyy' }}</small>
                        </div>
                    </a>
                </li>
            {% endfor -%}
        </ul>
    </main>
{% endblock %}