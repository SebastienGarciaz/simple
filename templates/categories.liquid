{% extends theme.liquid %}
{% block contents %}

<h1>Categories</h1>        
<ul>
    {% for category in categories.all -%}
        <li>
            <h3><a href="/categories/{{ category.slug}}">{{ category.title }}</a></h3>
            {{ category.image_url_small | img_tag }}
            <p>Description</p>
        </li>
    {% endfor -%}
</ul>
     
{% endblock %}