// Table collapse
// --------------------------------------------
tbody.table-collapse {
    display: none;
    
    &.in {
        display: table-row-group;
       animation: pop-upwards 160ms forwards linear;
    }
}
.table-collapse-toggle {
    padding: 15px 0;
    text-align: center;
    transition: opacity .3s ease;
    
    &.refreshing {
        opacity: .4;
        pointer-events: none;   
    }
}