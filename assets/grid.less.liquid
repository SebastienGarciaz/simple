// ==========================================================================
// Grid
// ==========================================================================

// Containers
// -----------------------------------------------
.container,
.container-narrow,
.container-fluid {
    position: relative;
    padding-left: @grid-gutter-width / 2;
    padding-right: @grid-gutter-width / 2;
    
    @media (min-width: @screen-sm) {
        padding-left: @grid-gutter-width;
    	padding-right: @grid-gutter-width;
    }
}
.container,
.container-narrow {
    margin-right: auto;
	margin-left: auto;
	.clearfix();
}
.container-narrow {
	max-width: @screen-sm;
}
.container {
	max-width: @screen-md;
}

// Fluid layouts (left aligned, with sidebar, min- & max-width content)
.container-fluid .container, 
.container-fluid .container-narrow {
    padding-left: 0;
    padding-right: 0;
}

// Grid
// -----------------------------------------------
@media (min-width: @screen-sm) {
    .span1  { width: 5.801104972%;  }
    .span2  { width: 14.364640883%; }
    .span3  { width: 22.928176794%; }
    .span4  { width: 31.491712705%; }
    .span5  { width: 40.055248616%; }
    .span6  { width: 48.618784527%; }
    .span7  { width: 57.182320438000005%; }
    .span8  { width: 65.74585634900001%; }
    .span9  { width: 74.30939226%; }
    .span10 { width: 82.87292817100001%; }
    .span11 { width: 91.436464082%; }
    
    // layout & column defaults
    .span1, .span2, .span3, .span4, .span5, .span6, .span7, .span8, .span9, .span10, .span11 {
    	float: left;
    	margin-left: 2.762430939%;
    
        // First child has no margin, or first in row
        &:first-child,
        &.first {
        	margin-left: 0;
        }
    }
    .row {
    	.clearfix();
    }
}