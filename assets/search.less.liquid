// ==========================================================================
// Search
// ==========================================================================

.form-search {
    margin: 0;
}
// Search query input
input.search-query {
	border-radius: 30px;
	padding-left: @padding-large-horizontal;
	padding-right: @padding-large-horizontal * 2;
}
// Control wrapper
.search-control {
	position: relative;
	
	.btn-search { 
        position: absolute;
        right: 15px;
        top: 13px;
        line-height: 1;
        
        [class^="icon-"] {
            margin: 0;
        }
    }
}