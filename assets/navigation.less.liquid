// ==========================================================================
// Navigation styles
// ==========================================================================

.nav-bar .form-search {
    margin-top: 10px;
}
.nav-bar .main-menu {
    font-size: 0;
    
    > ul > li {
        position: relative;
        display: inline-block;
        .font-size(@font-size-base);
        
        > a {
            padding: 20px 15px;
        }
        
        &:hover,
        &.active {
            > a {
                background: @brand-primary;
                color: #fff;
            }
        }
        &:hover .main-nav__sub { 
            display: block;
        }
    }
    a {
        display: block;
        
        &:hover,
        &:focus {
            color: @brand-primary;
        }
    }
    &__sub {
        display: none;
        position: absolute;
        top: 100%;
        left: 50%;
        z-index: 50;
        width: 140px;
        margin-left: -70px;
        text-align: left;

        a {
            padding: 15px 20px;
            background: @off-white;
        }
        li {
            border: 2px solid darken(@off-white, 5%);
            border-width: 0 2px;
        }
        li:first-child {
            //margin-top: 15px;
            .simple-arrow("top", darken(@off-white, 5%));
            border-width: 2px 2px 0;
            border-radius: 4px 4px 0 0;
            
            a {
                .simple-arrow("top", #fff, 6px);
                border-radius: 2px 2px 0 0;
                
                &:after {
                    z-index: 2;
                }
                &:hover:after {
                    border-bottom-color: darken(@off-white, 2%);
                }
            }
        }
        li:last-child {
            border-width: 0 2px 2px;
            border-radius: 0 0 4px 4px;
            
            a {
                border-radius: 0 0 2px 2px;
            }
        }
    }
}