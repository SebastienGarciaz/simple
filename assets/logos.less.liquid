// ==========================================================================
// Logos
// ==========================================================================

[class^="logo-"] {
    display: inline-block;
    vertical-align: middle;
    
    // Hide text
    white-space: nowrap;
    text-indent: 99em;
    overflow: hidden;
    
    // Background defaults
    background-size: contain;
    background-repeat: no-repeat;
}

.logo-selz {
    width: 72px;
    height: 42px;
    background-image: @logo-selz;
}
.logo-visa {
    width: 46px;
    height: 14px;
    background-image: @logo-visa;
}
.logo-mastercard {
    width: 36px;
    height: 21px;
    background-image: @logo-mastercard;
}
.logo-amex {
    width: 21px;
    height: 21px;
    background-image: @logo-amex;
}
.logo-paypal {
    width: 82px;
    height: 21px;
    background-image: @logo-paypal;
    
    &.logo-white {
        background-image: @logo-paypal-white;
    }
}