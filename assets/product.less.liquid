// ==========================================================================
// Products
// ==========================================================================

.product {
    
    &--tiles {
        font-size: 0;
    }
    &--tile {
        .font-size(@font-size-base);
        
        a {
            display: block;
            position: relative;
            min-height: 250px;
        }
        .product__media {
            background-size: cover;
            background-position: 50% 50%;
            min-height: 200px;
        }
        .product__info {
            padding: @grid-section-padding 0;
            .font-size(@font-size-base);
            
            h3 {
                margin: 0 0 5px;
                color: @black;
            }
            p,
            small {
                color: @gray;
                font-weight: 600;
            }
        }
    }
}