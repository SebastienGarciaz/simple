@font-face {
    font-family: "Icons";
    src:    url("//d33i624pw6jj68.cloudfront.net/themes/simple/static/fonts/icons/icomoon.woff?wfg9q0") format("woff"),
		    url("//d33i624pw6jj68.cloudfront.net/themes/simple/static/fonts/icons/icomoon.ttf?wfg9q0") format("truetype");
	font-weight: normal;
	font-style: normal;
}

// Specific styles
// --------------------------------------------
[class^="icon-"]::before,
[class*=" icon-"]::before {
    font-family: "Icons";
    speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
    .font-smoothing(on);
}

.btn,
.btn-faux-link,
a {
    &[class^="icon-"],
    &[class*=" icon-"] {
        &::before {
            line-height: 1;
            text-decoration: inherit;
            margin-right: 5px;
        }
        &.right-icon::before {
            margin-left: 5px;
            margin-right: 0;
        }
    }
}

