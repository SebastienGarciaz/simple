// ==========================================================================
// Hiding/showing content nicely
// ==========================================================================

// Hide from both screenreaders and browsers: h5bp.com/u
.hidden {
    display: none !important;
    visibility: hidden;

    &.in,
    &.btn-block.in {
        display: block !important;
        visibility: visible;
    }
    tr&.in    { display: table-row !important; }
    tbody&.in { display: table-row-group !important; }
    &.btn.in  { display: inline-block !important; }
}

// Hide only visually, but have it available for screenreaders: h5bp.com/v
.visually-hidden {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
}

// Extends the .visuallyhidden class to allow the element to be focusable when navigated to via the keyboard: h5bp.com/p
.visually-hidden.focusable:active,
.visually-hidden.focusable:focus {
    clip: auto;
    height: auto;
    margin: 0;
    overflow: visible;
    position: static;
    width: auto;
}

// Hide visually and from screenreaders, but maintain layout
.invisible {
    visibility: hidden;
}