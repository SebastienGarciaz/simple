// ==========================================================================
// Store header
// ==========================================================================

.header {
    margin: 0 0 @grid-section-padding * 2;
    padding: @grid-section-padding * 4 0;
    background: @brand-primary;
    text-align: center;
    box-shadow: inset 0 2px 5px rgba(0,0,0, .15);
    
    h1 {
        margin: 0;
        color: #fff;
        .font-size(48);
    }
    p {
        margin: 15px 0 0;
        color: #fff;
        .font-size(@font-size-large);
    }
}