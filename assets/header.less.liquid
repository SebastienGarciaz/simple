// ==========================================================================
// Store header
// ==========================================================================

.header {
    padding-top: @grid-section-padding * 2;
    padding-bottom: @grid-section-padding * 2.5;
    text-align: center;
    
    h1 {
        .font-size(48);
    }
    p {
        .font-size(21);
    }
    
    @media (min-width : @screen-md) {
        padding-top: @grid-section-padding * 4;
        padding-bottom: @grid-section-padding * 5;
    }
}

.header,
.header-small {
    h1 {
        margin: 0;
    }
    h1 ~ p,
    h2 ~ p,
    h3 ~ p {
        margin: @grid-section-padding / 2 0 0; 
        color: @headings-small-color;
    }
}

// Variations
.header-small {
    padding-top: @grid-section-padding * 1;
    padding-bottom: @grid-section-padding * 1.5;

    p {
       .font-size(@font-size-large); 
    }
    
    @media (min-width : @screen-md) {
        padding-top: @grid-section-padding * 2;
        padding-bottom: @grid-section-padding * 3;
    }
}